<?xml version="1.0"?>

<particle_systems>
	<!-- Smoke -->
	<particle_system name="smoke">
		<particles generations="60" particles_per_generation="150" particle_size="7" />
		<base_line x1="200.0" y1="0.0" />
		<velocity minAngle="75.0" maxAngle="105.0" modulus="1.0" />
		<base_color r="0" g="0" b="0" a="15" />
		<delta_color r="0" g="0" b="0" a="-0.25" />
	</particle_system>

	<!-- Fire core -->
	<particle_system name="fire_core">
		<particles generations="30" particles_per_generation="150" particle_size="7" />
		<base_line x1="200.0" y1="0.0" />
		<velocity minAngle="75.0" maxAngle="105.0" modulus="1.0-1.5" />
		<base_color r="200-255" g="0" b="0" a="15" />
		<delta_color r="0" g="0" b="0" a="-0.5" />
	</particle_system>

	<!-- Fire -->
	<particle_system name="fire">
		<particles generations="60" particles_per_generation="100" particle_size="5" />
		<base_line x1="200.0" y1="0.0" />
		<velocity minAngle="75.0" maxAngle="105.0" modulus="1.0" />
		<base_color r="230" g="95" b="0" a="15" />
		<delta_color r="0" g="0" b="0" a="-0.25" />
	</particle_system>

	

	<!-- Foam -->
	<particle_system name="foam">
		<particles generations="20" particles_per_generation="200" particle_size="5" />
		<base_line x1="1.0" y1="5.0" />
		<velocity minAngle="0.0" maxAngle="360.0" modulus="1.5" />
		<base_color r="230" g="230" b="230" a="40" />
		<delta_color r="0" g="0" b="0" a="-2" />
	</particle_system>

	<!-- Electric field -->
	<particle_system name="electric_field">
		<particles generations="70" particles_per_generation="10" particle_size="5" />
		<base_line x1="100.0" y1="100.0" />
		<velocity minAngle="0.0" maxAngle="0.0" modulus="1.0" />
		<base_color r="0" g="0" b="150-255" a="50" />
		<delta_color r="0" g="0" b="0" a="0" />
	</particle_system>

	<!-- Snow -->
	<particle_system name="snow">
		<particles generations="70" particles_per_generation="10" particle_size="5" />
		<base_line x1="150.0" y1="0.0" />
		<velocity minAngle="265.0" maxAngle="275.0" modulus="1.0" />
		<base_color r="255" g="255" b="255" a="200" />
		<delta_color r="0" g="0" b="0" a="0" />
	</particle_system>

	<particle_systems_group name="fire">
		<particle_system name="smoke" />
		<particle_system name="fire" />
		<particle_system name="fire_core" />
	</particle_systems_group>
</particle_systems>
